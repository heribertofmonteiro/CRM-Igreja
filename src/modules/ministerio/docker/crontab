# Cron jobs para o módulo Ministério
# Executar processamento de fila a cada 5 minutos
*/5 * * * * www-data php /var/www/html/modules/ministerio/cron.php >> /var/log/ministerio/cron.log 2>&1

# Limpar logs antigos uma vez por dia às 3 AM
0 3 * * * www-data find /var/log/ministerio -name "*.log" -mtime +30 -delete

# Limpar tokens RSVP expirados uma vez por dia às 4 AM
0 4 * * * www-data php /var/www/html/modules/ministerio/cleanup-tokens.php >> /var/log/ministerio/cleanup.log 2>&1

# Verificar integridade do sistema uma vez por semana (domingo às 2 AM)
0 2 * * 0 www-data php /var/www/html/modules/ministerio/health-check.php >> /var/log/ministerio/health.log 2>&1